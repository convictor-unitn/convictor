<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:postgresql://localhost:5432/jdbctest1</param-value>
    </context-param>
    <context-param>
        <param-name>dbUsername</param-name>
        <param-value>webprog2016</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>webprog2016</param-value>
    </context-param>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:postgresql://localhost:5432/convictor</param-value>
    </context-param>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/errorPages/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/errorPages/401.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errorPages/404.jsp</location>
    </error-page>
    <filter>
        <filter-name>StaticFilesFilter</filter-name>
        <filter-class>it.unitn.disi.webprog2016.convictor.framework.filters.StaticFilesFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RestrictedAccessFilter</filter-name>
        <filter-class>it.unitn.disi.webprog2016.convictor.app.filters.RestrictedAccessFilter</filter-class>
    </filter>
	<servlet>
        <servlet-name>QRcodeServlet</servlet-name>
        <servlet-class>it.unitn.disi.webprog2016.convictor.framework.servlets.QRcodeServlet</servlet-class>
    </servlet>
	<servlet-mapping>
        <servlet-name>QRcodeServlet</servlet-name>
        <url-pattern>/restaurants/qrcode</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>RestrictedAccessFilter</filter-name>
        <url-pattern>/protected</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StaticFilesFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.disi.webprog2016.convictor.framework.listeners.DatabaseListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.disi.webprog2016.convictor.framework.listeners.MailerLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>RouterServlet</servlet-name>
        <servlet-class>it.unitn.disi.webprog2016.convictor.framework.servlets.RouterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RouterServlet</servlet-name>
        <url-pattern>/pages/*</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
