<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE routes [
<!ELEMENT route (url, method, controller, action, format)>
<!ELEMENT url (#PCDATA)>
<!ELEMENT method (#PCDATA)>
<!ELEMENT controller (#PCDATA)>
<!ELEMENT action (#PCDATA)>
<!ELEMENT format (#PCDATA)>  
]>
<!--
    Route Configuration file.
    In this XML file there are specified all the applications routes.
    There is also specified a small DTD to ensure the correctness of the file. 
    Author: Giovanni De Toni
-->
<routes>
    <route>
        <method>GET</method>
        <url>/</url>
        <controller>StaticPages</controller>
        <action>home</action>
        <format>html</format>            
    </route>
    <route>
        <method>GET</method>
        <url>/protected</url>
        <controller>StaticPages</controller>
        <action>protected_page</action>
        <format>html</format>            
    </route>
    
    <!-- Restaurant routes -->
    <route>
        <method>GET</method>
        <url>/restaurants/</url>
        <controller>RestaurantsController</controller>
        <action>index</action>
        <format>html</format>            
    </route>
    <route>
        <method>GET</method>
        <url>/restaurants/show/</url>
        <controller>RestaurantsController</controller>
        <action>show</action>
        <format>html</format>            
    </route>
    <route>
        <method>GET</method>
        <url>/restaurants/new</url>
        <controller>RestaurantsController</controller>
        <action>new</action>
        <format>html</format>            
    </route>
    <route>
        <method>POST</method>
        <url>/restaurants/create</url>
        <controller>RestaurantsController</controller>
        <action>create</action>
        <format>html</format>            
    </route>
    <route>
        <method>GET</method>
        <url>/restaurants/edit</url>
        <controller>RestaurantsController</controller>
        <action>edit</action>
        <format>html</format>            
    </route>
    <route>
        <method>POST</method>
        <url>/restaurants/update</url>
        <controller>RestaurantsController</controller>
        <action>update</action>
        <format>html</format>            
    </route>
</routes>
